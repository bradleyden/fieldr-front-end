<div class="form-group">
  <label for="previous">Old Password</label>
  {{input type="password"
          class="form-control"
          id="previous"
          placeholder="Old password"
          value=passwords.previous}}
</div>

<div class="form-group">
  <label for="next">New Password</label>
  {{input type="password"
          class="form-control"
          id="next"
          placeholder="New password"
          value=passwords.next}}
</div>

<button type="submit" class="btn" {{action "submit"}}>
  Change Password
</button>

<button class="btn" {{action "reset"}}>
  Reset
</button>

{{#link-to 'games'}}
<button class="btn">
  <i class="fa fa-times" aria-hidden="true"></i>
</button>
{{/link-to}}
