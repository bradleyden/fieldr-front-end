<form class='newPA' {{action 'createPlateappearance' on='submit'}}>
  <select class='btn' onchange={{action 'selectInningHalf' value="target.value"}}>
    <option value='TOP'>TOP</option>
    <option value='BOT'>BOT</option>
  </select><br>
  {{input class='pa-input' type='number' value=newPlateappearance.inning required='true' min='1' max='20'}}
  <span class='form-label'>Batter:</span>
  {{input class='pa-input' type='number' value=newPlateappearance.batter required='true' min='0' max='99'}}
  <span class='form-label'>Pitcher:</span>
  {{input class='pa-input' type='number' value=newPlateappearance.pitcher required='true' min='0' max='99'}}
  <span class='form-label'>Batter Result:</span>
  <select class='pa-select btn' onchange={{action 'selectOutcome' value="target.value"}}>
    <option value='No AB'>No AB</option>
    <option value='Hit'>Hit</option>
    <option value='Out'>Out</option>
  </select>
  <span class='form-label'>Runs:</span>
  {{input class='pa-input' type='number' value=newPlateappearance.runs required='true' min='0' max='4'}}
  <span class='form-label'>Errors:</span>
  {{input class='pa-input' type='number' value=newPlateappearance.def_error required='true' min='0' max='99'}}
  <span class='form-label'>Outs:</span>
  {{input class='pa-input' type='number' value=newPlateappearance.outs required='true' min='0' max='3'}}
  <button class='btn' type='submit'><i class="fa fa-plus" aria-hidden="true"></i></button>
</form>
